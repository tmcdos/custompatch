{
  "name": "custompatch",
  "version": "1.1.5",
  "description": "Tool for patching buggy NPM packages instead of forking them",
  "author": "IVO GELOV",
  "private": false,
  "license": "BSD-3-Clause",
  "repository": "github:tmcdos/custompatch",
  "bin": "./index.mjs",
  "scripts": {
    "build": "esbuild ./src/index.js --bundle --platform=node --format=esm --target=es2020,node16 --packages=external --outfile=index.mjs",
    "prepare": "npm run build"
  },
  "engines": {
    "node": ">= 16.20.0",
    "npm": ">= 9.6.7"
  },
  "keywords": [
    "patching",
    "buggy",
    "packages"
  ],
  "dependencies": {
    "commander": "^12.1.0",
    "diff": "^7.0.0",
    "pacote": "^18.0.6"
  },
  "devDependencies": {
    "@types/diff": "^5.2.2",
    "@types/node": "^22.5.5",
    "@types/pacote": "^11.1.8",
    "esbuild": "0.25.0"
  }
}
